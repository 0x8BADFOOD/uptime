<script src="<%= route %>/javascripts/bootstrap-tab.js"></script>
<script src="<%= route %>/javascripts/bootstrap-button.js"></script>
<script src="<%= route %>/javascripts/ejs.min.js"></script>
<script src="<%= route %>/javascripts/highcharts.js"></script>
<script src="<%= route %>/javascripts/pagination.js"></script>
<script src="<%= route %>/javascripts/jquery.timeago.js"></script>
<script>
var ejs = require('ejs');
ejs.open = '{{';
ejs.close = '}}';
var page = {};
</script>
<h1>
  Tag "<%= tag.name %>"
</h1>
<ul class="nav nav-tabs">
  <li class="active"><a href="#stats" data-toggle="tab">History</a></li>
  <li><a href="#events" data-toggle="tab">Events</a></li>
  <li><a href="#checks" data-toggle="tab">Checks</a></li>
</ul>
<div class="tab-content">
  <%- partial('_stats', { url: { 
    updateStat: '/api/tag/' + tag.name + '/stat/',
    chart:      '/api/tag/' + tag.name + '/'
  }} ) %>
  <div class="tab-pane" id="events">
  <%- partial('_events', { url: '/api/tag/' + tag.name + '/events', route: route }) %>
  </div>
  <div class="tab-pane" id="checks">
  <%- partial('_checks', { url: '/api/check/tag/' + tag.name, route: route }) %>
  </div>
</div>
<script>
$(document).ready(function() {
  $('.navbar-inner li').eq(2).addClass('active');
  $('#stats').addClass('active');
});
</script>
